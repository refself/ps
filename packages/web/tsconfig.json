{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@workflow-builder/core": ["../core/src/index.ts"],
      "@workflow-builder/core/*": ["../core/src/*"],
      "@workflow-builder/editor": ["../editor/src/index.ts"],
      "@workflow-builder/editor/*": ["../editor/src/*"]
    }
  },
  "include": [
    "src",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.cjs"
  ],
  "exclude": ["dist"]
}
